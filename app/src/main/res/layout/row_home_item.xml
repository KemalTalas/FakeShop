<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/home_row_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginVertical="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_rv_image"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_foreground1"
                android:maxWidth="100dp"
                android:maxHeight="100dp"
                android:padding="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginVertical="10dp">

                <TextView
                    android:id="@+id/home_rv_item_name"
                    android:layout_width="240dp"
                    android:layout_height="20dp"
                    android:text="Item Name"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/home_rv_item_desc"
                    android:layout_width="240dp"
                    android:layout_height="20dp"
                    android:text="Item Description"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:ellipsize="end"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_rv_item_price"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="$0000.00"
                        android:textColor="@color/teal_700"
                        android:textStyle="bold"
                        android:textSize="25sp"/>

                    <ImageView
                        android:id="@+id/home_rv_item_unfav"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/not_favorited_ic"
                        android:layout_marginLeft="40dp"/>

                    <ImageView
                        android:id="@+id/home_rv_item_fav"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/favorited_ic"
                        android:layout_marginLeft="-30dp"
                        android:visibility="invisible"/>

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>