<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="Header" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CategoriesButton" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="ActionBarNew" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="backgroundColor">#1E88E5</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.RowHome" parent="">
        <item name="android:topLeftRadius">26dp</item>
        <item name="android:bottomLeftRadius">26dp</item>
        <item name="cornerSizeTopLeft">20%</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.RowHomeF" parent="">
        <item name="cornerSizeTopLeft">12%</item>
        <item name="cornerSizeBottomLeft">12%</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.RowProduct" parent="">
        <item name="cornerSizeTopLeft">12%</item>
        <item name="cornerSizeTopRight">12%</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/teal_200</item>
        <item name="colorSecondary">@color/teal_700</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/teal_700</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/teal_700</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>